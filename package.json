{
  "name": "aegix",
  "version": "1.1.0",
  "private": true,
  "description": "Privacy-First Agent Payment Gateway for Solana",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "gateway": "npm run dev --workspace=@aegix/gateway",
    "dashboard": "npm run dev --workspace=@aegix/dashboard",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "npm run test --workspace=@aegix/gateway",
    "test:agent": "npm run test:agent --workspace=@aegix/gateway"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.0",
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-phantom": "^0.9.28",
    "@solana/wallet-adapter-solflare": "^0.6.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
